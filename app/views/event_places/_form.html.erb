<%= simple_form_for(@event_place, html: { multipart: true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :description, required: true %>
    <%= f.input :location, required: true %>
    <%= f.input :category_id, collection: Category.all, include_blank: true, required: true %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, @event_place.new_record? ? "Create Event Place" : "Update Event Place", class: "btn btn-success" %>
  </div>
<% end %>
