<%= simple_form_for(recipe) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :ingredients %>
  <%= f.input :instructions %>
  <%= f.input :location %>
  <%= f.input :prep_time %>
  <%= f.input :category_id, collection: Category.all, include_blank: true %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>

  <%= f.submit %>
<% end %>
